{
  "manifest_version": 3,
  "name": "Modular Applets",
  "version": "0.1.0",
  "description": "A modular Chrome extension with selectable applets.",
  "action": {
    "default_popup": "popup.html"
  },
  "permissions": ["tabs"],
  "host_permissions": ["https://chatgpt.com/*"],
  "content_scripts": [
    {
      "matches": ["https://chatgpt.com/*"],
      "js": ["contentScript.js"],
      "run_at": "document_idle"
    }
  ]
}
